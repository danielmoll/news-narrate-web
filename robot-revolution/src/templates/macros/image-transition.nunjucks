{% macro render(options) %}
  <div class="image-transition-container {{ options.imageContainerClasses }}">
    <div class="image-transition image-transition-top">
      <img src="{{ options.topImageUrl }}" alt="" class="image__item image-top">
    </div>
    <div class="image-transition image-transition-bottom">
      <img src="{{ options.bottomImageUrl }}" alt="" class="image__item image-bottom">
    </div>
  </div>
{% endmacro %}
